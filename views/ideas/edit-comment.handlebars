<form class="form my-3 bg-gray-100 p-3" action="/ideas/comment/{{idea._id}}" method="post">
    <div class="text-sm w-1/2 mx-auto">
        <label for="comment" class="font-bold">Edit Comment</label>
        <textarea name="comment" id="comment" rows="5" class="mt-3 appearance-none w-full border border-gray-200 p-2 h-40 focus:outline-none focus:border-gray-500" placeholder="Enter your comment">{{ comment.commentBody }}</textarea>
    </div>
    <div class="submit flex justify-center">
        <button type="submit" class="bg-green-400 shadow-lg text-white px-4 py-2 hover:bg-green-700 mt-8 text-center font-semibold focus:outline-none">
            Edit Comment
        </button>
    </div>
</form>