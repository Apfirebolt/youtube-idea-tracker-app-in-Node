{{#each ideas}}
  <div class="p-3 flex items-center justify-center" data-aos='fade-in'>
  <div class="bg-white border w-3/4 mx-auto shadow-sm px-4 py-3 rounded-lg">
    <p class="my-2 text-xl text-blue-400 bg-gray-100 p-2">
      {{ title }}
    </p>
    <p class="my-2 text-lg text-blue-400 bg-gray-100 p-2">
      <a href="/ideas/{{_id}}">{{ details }}</a>
    </p>
    <p class="text-gray-800 text-sm mt-2 leading-normal md:leading-relaxed whitespace-pre-line">{{ script }}</p>
    <p class="text-center my-2 text-lg text-blue-400">
      Comments
    </p>
    {{#each comments}}
      <div class="bg-red-700 text-white whitespace-pre-line px-2 my-2 rounded-lg shadow-md">
        <p>
        {{ commentBody }}
        </p>
       <div class="flex justify-between items-center">
        <p>
        {{ commentDate }}
        </p>
        <p>
          - {{ commentUser.first_name }} <a href="/ideas/comment/{{../_id}}/edit/{{_id}}"><i class="icofont-edit m-3" style="font-size: 1rem"></i></a>
        </p>
       </div>
      </div>
    {{/each}}
    <div class="container flex justify-center p-1">
        <a href="ideas/pictures/{{_id}}" class="inline-block m-1 px-6 py-2 text-xs font-medium leading-6 text-center text-white uppercase transition bg-indigo-500 rounded shadow ripple hover:shadow-lg hover:bg-blue-400 focus:outline-none">Pictures</a>
        <a href="ideas/edit/{{_id}}" class="inline-block m-1 px-6 py-2 text-xs font-medium leading-6 text-center text-white uppercase transition bg-green-500 rounded shadow ripple hover:shadow-lg hover:bg-gray-400 focus:outline-none">Edit</a>
        <a href="ideas/delete/{{_id}}" class="inline-block m-1 px-6 py-2 text-xs font-medium leading-6 text-center text-white uppercase transition bg-pink-500 rounded shadow ripple hover:shadow-lg hover:bg-pink-600 focus:outline-none">Delete</a>
    </div>
  </div>
</div>
{{else}}
  <p class="my-3 text-xl text-blue-500 text-center">No video ideas listed</p>
{{/each}}