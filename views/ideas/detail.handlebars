<div class="container sm:w-1/2 bg-gray-100 mx-auto my-3 p-3">
    <div class="flex justify-between items-center">
        <p class="my-3 text-center text-gray-700 text-2xl">
        Title
        </p>
        <p class="my-3 text-center text-gray-700 text-2xl">
        {{ idea.title }}
        </p>
    </div>
    <div class="flex justify-between items-center">
        <p class="my-3 text-center text-gray-700 text-xl">
        Details
        </p>
        <p class="my-3 text-center text-gray-700 text-xl">
        {{ idea.details }}
        </p>
    </div>
    <p class="text-center text-blue-700 whitespace-pre-line">
        {{ idea.script }}
    </p>
</div>
<div class="grid sm:grid-cols-3 gap-4">
  {{#each idea.pictures}}
  <div class="container p-2" data-aos="fade-right">
      <p class="text-center text-lg bg-blue-700 text-gray-100 p-2">
      {{ title }}
      </p>
      <a class="venobox" href="/uploads/{{ name }}">
        <img src="/uploads/{{ name }}" alt="image alt" class="mx-auto"/>
      </a>
  </div>
  {{/each}}
</div>
