<div class="mx-4 card bg-white w-1/2 p-10 md:rounded-lg my-8 mx-auto bg-gray-300">
    <div class="title">
        <h1 class="font-bold text-center text-xl">ADD IDEA IMAGE</h1>
    </div>
    <form class="form mt-4" action="/ideas/pictures/{{idea._id}}" method="post" enctype="multipart/form-data">
        <div class="flex flex-col text-sm">
            <label for="title" class="font-bold mb-2">Image Title</label>
            <input name="title" class="appearance-none border border-gray-200 p-2 focus:outline-none focus:border-gray-500" type="text" placeholder="Enter a title"> 
        </div>
        <div class="text-sm flex flex-col">
            <label for="description" class="font-bold mt-4 mb-2">Image Description</label>
            <textarea name="description" class="appearance-none w-full border border-gray-200 p-2 h-40 focus:outline-none focus:border-gray-500" placeholder="Enter your description"></textarea>
        </div>
         <div class="flex flex-col text-sm my-2">
            <label for="file" class="font-bold mb-2">Upload File</label>
            <input name="file" class="appearance-none border border-gray-200 p-2 focus:outline-none focus:border-gray-500" type="file" /> 
        </div>
        <div class="submit flex justify-center">
            <button type="submit" class="bg-blue-600 shadow-lg text-white px-4 py-2 hover:bg-blue-700 mt-8 text-center font-semibold focus:outline-none">Add Image</button>
        </div>
    </form>
</div>
    